@model AddCarViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Manufacturer"></label>
                <select asp-for="Manufacturer" class="form-control">
                    @foreach (var manufacture in Model.Manufactures!)
                    {
                        <option value="@manufacture.Name">@manufacture.Name</option>
                    }
                </select>
                <span asp-validation-for="Manufacturer" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" type="text" />
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VIN"></label>
                <input asp-for="VIN" class="form-control" type="text">
                <span asp-validation-for="VIN" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyType"></label>
                <select asp-for="BodyType" class="form-control">
                    @foreach (var bodyType in Model.BodyTypes!)
                    {
                        <option value="@bodyType.Name">@bodyType.Name</option>
                    }
                </select>
                <span asp-validation-for="BodyType" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fuel"></label>
                <select asp-for="Fuel" class="form-control">
                    @foreach (var fuel in Model.Fuels)
                    {
                        <option value="@fuel.Name">@fuel.Name</option>
                    }
                </select>
                <span asp-validation-for="Fuel" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsePower"></label>
                <input asp-for="HorsePower" class="form-control" type="number" value="">
                <span asp-validation-for="HorsePower" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" type="number" value="">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstRegistrationYear"></label>
                <input asp-for="FirstRegistrationYear" class="form-control" type="number" value="">
                <span asp-validation-for="FirstRegistrationYear" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" type="number" value="">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TraveledDistance"></label>
                <input asp-for="TraveledDistance" class="form-control" type="number" value="">
                <span asp-validation-for="TraveledDistance" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" type="text">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GearType"></label>
                <select asp-for="GearType" class="form-control">
                    @foreach (var gearType in Model.GearTypes)
                    {
                        <option value="@gearType.Name">@gearType.Name</option>
                    }
                </select>
                <span asp-validation-for="GearType" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" type="text">
                <span asp-validation-for="Color" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDoors"></label>
                <select asp-for="NumberOfDoors" class="form-control">
                    @foreach (var numberOfDoor in Model.NumbersOfDoors)
                    {
                        <option value="@numberOfDoor.Name">@numberOfDoor.Name</option>
                    }
                </select>
                <span asp-validation-for="NumberOfDoors" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSeats"></label>
                <select asp-for="NumberOfSeats" class="form-control">
                    @foreach (var numbersOfSeat in Model.NumbersOfSeats)
                    {
                        <option value="@numbersOfSeat.Name">@numbersOfSeat.Name</option>
                    }
                </select>
                <span asp-validation-for="NumberOfSeats" class="small text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="Equipments"></label>
                @{
                    foreach (var equipment in Model.EquipmentsToChooseFrom)
                    {
                        <div class="form-check col-lg-2 m-2">
                            <input class="form-check-input"
                                   type="checkbox"
                                   value="@equipment.Description"
                                   name="Equipments"
                                   id="checkbox_@equipment.Value"
                                   checked="@equipment.IsChecked">
                            <label class="form-check-label"
                                   for="checkbox_@equipment.Value">
                                @equipment.Description
                            </label>
                        </div>
                    }
                }
                <span asp-validation-for="Equipments" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" type="text">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check col-lg-2 m-2">
                    <input class="form-check-input" type="checkbox" asp-for="ServiceHistory">
                    <label class="form-check-label" asp-for="ServiceHistory">
                        Service History
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Add Car" />
            </div>
        </form>
    </div>
</div>