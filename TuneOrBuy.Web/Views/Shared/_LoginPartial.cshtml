@using Microsoft.AspNetCore.Identity
@using TuneOrBuy.Data.Models
@using TuneOrBuy.Services.Contracts
@using System.Security.Claims
@inject SignInManager<Buyer> SignInManager
@inject UserManager<Buyer> UserManager
@inject ICarServiceOwner CarServiceOwner;
@inject ISellerService SellerService;

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var UserIsSeller = await SellerService
        .UserIsSeller(Guid.Parse((ReadOnlySpan<char>)User.FindFirstValue(ClaimTypes.NameIdentifier)));

        var UserIsCarServiceOwner = await CarServiceOwner
        .UserIsCarServiceOwner(Guid.Parse((ReadOnlySpan<char>)User.FindFirstValue(ClaimTypes.NameIdentifier)));

        if (!UserIsSeller && !UserIsCarServiceOwner)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Seller" asp-action="Become">Become Seller</a>
            </li>
        }

        if (!UserIsCarServiceOwner && !UserIsSeller)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="CarServiceOwner" asp-action="Become">Become Car Service Owner</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!.Substring(0, User.Identity.Name.IndexOf("@"))</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
